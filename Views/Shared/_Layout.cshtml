<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionDeStockMagasin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/boostwatchtheme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionDeStockMagasin.styles.css" asp-append-version="true" />
    <script href="https://kit.fontawesome.com/7112e55585.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">GestionDeStockMagasin.</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
            @if (Context.Session.GetString("Id")  != null )
            {

           
            <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Products</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-controller="Product" asp-action="Index">Products Listes</a>
                <a class="dropdown-item" asp-controller="Product" asp-action="Create">Add Product</a>
                <a class="dropdown-item" asp-controller="Product" asp-action="Index">Remove Product</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-controller="Achat" asp-action="Create">Achats</a>
            </div>
            </li>
            <li class="nav-item">
              <a class="nav-link " asp-area="" asp-controller="Category" asp-action="Index">Category</a>
            </li>
            <li class="nav-item">
              <a class="nav-link " asp-area="" asp-controller="Personnels" asp-action="Index">Personnel</a>
            </li>
            <li class="nav-item">
              <a class="nav-link " asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a>
            </li>
            <li class="nav-item">
              <a class="nav-link " asp-area="" asp-controller="Facture" asp-action="Index">Livraison</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-controller="Product" asp-action="Alert">Alerts</a>
            </li>
             }
            <partial name="_navlogin" />
        </ul>
         
        
        </div>
    </div>
    </nav>


        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
