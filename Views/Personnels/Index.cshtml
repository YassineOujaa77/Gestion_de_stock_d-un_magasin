@model IEnumerable<GestionDeStockMagasin.Models.Personnel>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Personnel List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Personnels" asp-action="Create" class="btn btn-success">
                 <i class="bi bi-plus-circle-dotted"></i> &nbsp;  Create New Personnel
            </a>
        </div>
    </div>
    <br /> <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                LastName
            </th>
            <th>
                Firstname
            </th>
            <th>
                Email
            </th>
            <th>
                Adresse
            </th>
            <th>
                Role
            </th>
            <th>
                Phone
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Nom
                </td> 
                <td>
                    @obj.Prenom
                </td>
                <td>
                    @obj.Email
                </td> 
                <td>
                    @obj.Adresse
                </td> 
                <td>
                    @obj.Role
                </td>
                <td>
                    @obj.Phone
                </td>
                <td>
                     <div class="w-75 btn-group" role="group">
                        <a asp-controller="Personnels" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-controller="Personnels" asp-action="Details" asp-route-id="@obj.Id"
                        class="btn btn-warning mx-2"> <i class="bi bi-ticket-detailed"></i> Details</a>

                        <a asp-controller="Personnels" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
                </td>
            </tr>
        }
    </tbody>
</table>
