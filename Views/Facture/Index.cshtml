@model GestionDeStockMagasin.ViewModels.LivraisonIndexViewModel
@{
    ViewData["Title"] = "Facture";
} 
<br> <br> 
<p>
    <a asp-action="Index">Livraison</a>
</p>

 @for(int i=0 ; i<Model.Clients.Count();i++)
        {
            <div>
                <form method="post" asp-action="create">
                     <div class="border p-3 mt-4">
                        <div class="row pb-2">
                            <h2 class="text-primary"> Livraison</h2>
                            <hr />
                    </div>
                    <div class="mb-3">
                        <input type="hidden" asp-for="idFact" value="@Model.idFactureList[i]" >
                        <label asp-for="ClientId" class=" text-dark form-control"> ClientId: @Model.Clients[i].Nom </label> <br>
                        <label asp-for="ProductId" class=" text-dark form-control"> ProduitId: @Model.Products[i].Nom </label><br>

                        <select asp-for="Id" asp-items="@(new SelectList(Model.Personnels, "Id","Nom","Prenom"))" class="form-select" aria-label=" "></select>
                    </div>

                 <button type="submit" class="btn btn-primary" style="width:150px">Valid</button>

                </form>
            </div><br /><hr/><br />
             
        }

